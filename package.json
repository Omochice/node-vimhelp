{
  "name": "vimhelp",
  "description": "Show vim help.",
  "version": "4.1.0",
  "author": "thinca <thinca+npm@gmail.com>",
  "bugs": {
    "url": "https://github.com/thinca/node-vimhelp/issues"
  },
  "devDependencies": {
    "@types/node": "^22.13.10",
    "@types/temp": "^0.9.4",
    "@typescript-eslint/eslint-plugin": "^5.30.0",
    "@typescript-eslint/parser": "^5.30.0",
    "@vitest/coverage-istanbul": "^3.0.8",
    "eslint": "^8.18.0",
    "eslint-plugin-import": "^2.26.0",
    "mkdist": "^2.2.0",
    "temp": "^0.9.4",
    "typescript": "^5.8.2",
    "vitest": "^3.0.8"
  },
  "engines": {
    "node": ">=22.0.0"
  },
  "exports": {
    ".": {
      "types": "./lib/index.d.ts",
      "import": "./lib/index.js",
      "require": "./lib/index.cjs"
    }
  },
  "files": [
    "lib"
  ],
  "homepage": "https://github.com/thinca/node-vimhelp",
  "keywords": [
    "document",
    "help",
    "vim"
  ],
  "license": "Zlib",
  "main": "./lib/index.cjs",
  "overrides": {
    "esbuild": "^0.25.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/thinca/node-vimhelp.git"
  },
  "scripts": {
    "build": "mkdist --src=src --dist=lib --format=cjs --ext=cjs --no-clean && mkdist --src=src --dist=lib --format=esm --ext=js --declaration --no-clean",
    "clean": "rm -fr coverage lib",
    "lint": "eslint src test",
    "test": "vitest run --config vitest.config.ts",
    "version": "sed -i -e \"s/^## Unreleased$/## v$(jq -r .version package.json) ($(date '+%Y-%m-%d'))/\" CHANGELOG.md && git add CHANGELOG.md"
  },
  "type": "module",
  "types": "./lib/index.d.ts"
}
